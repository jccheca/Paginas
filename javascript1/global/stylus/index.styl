@import 'nib/gradients'
@import 'nib/vendor'
vendor-prefixes = o ms moz webkit official
colorFondo = rgba(89, 112, 171, .5)
colorFondoCar = linear-gradient(rgba(129, 200, 186, 0.88), #fff, rgba(75, 123, 123, 0.95))

body
	font-size 16px
	font-family verdana
	color #000

.cajaCaracteristica
	background colorFondoCar
	border-radius 8px
	display inline-block
	margin .5em
	padding 1em .5em
	width 90%
	
	header
		.imgCar
			border-radius 50%
				
		.titCar
			color #555
	
	section
		.textoCar
			text-align justify
			
	footer
		text-align right
		
		.btnCar
			background colorFondoCar
			border 1px solid rgba(170, 255, 252, 0.33)
			border-radius 3px
			color #000
			padding .5em
			text-decoration none
		
			&:hover
				background linear-gradient(to bottom, rgba(250,249,242,1) 0%, rgba(196,194,165,1) 51%, rgba(173,170,121,1) 53%, rgba(250,249,242,1) 100%);
			
		

.cajaGeneral
	text-align center
	
.cajaHeader
	background colorFondo  /*#a63543*/
	border 4px solid rgba(89, 112, 171, .4)
	border-radius 16px
	display inline-block
	margin .5em
	padding .5em
	text-align center
	
	.titHeader
		color #f00


/*Media query*/
@media only screen and (min-width: 768px)
	.cajaCaracteristica
		width 42%

/*Media query*/
@media only screen and (min-width: 992px)
	.cajaCaracteristica
		width 30%
